<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your question"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/questionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your question" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Time Limit (seconds)"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/timeLimitInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Limit (seconds)" />

        <EditText
            android:id="@+id/optionAInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option A"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/optionBInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option B" />

        <EditText
            android:id="@+id/optionCInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option C" />

        <EditText
            android:id="@+id/optionDInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option D" />

        <Spinner
            android:id="@+id/correctOptionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/addQuestionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Question"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/setQuizButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Quiz"
            android:layout_marginTop="8dp" />

        <!-- ListView for questions -->
        <ListView
            android:id="@+id/questionsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
