<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hostDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/hostDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Dashboard"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/createQuizButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Quiz"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/viewQuizzesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Quizzes" />

</LinearLayout>
